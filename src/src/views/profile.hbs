    </div>

    <script src="https://kit.fontawesome.com/b91caa2f2a.js" crossorigin="anonymous"></script>

    <div class="dropdown" style="display:none;">
        <select id="profile-dropdown" onchange="goToSelectedProfile()">
            <option value="">Select a profile</option>
            <option value="Profile2.html">Profile 2</option>
            <option value="Profile3.html">Profile 3</option>
        </select>
    </div>
    
    <div class="modal" id="Settings">
    <div class="Set-container" id="Edit-Profile">

      <div id="Settings-lists">
